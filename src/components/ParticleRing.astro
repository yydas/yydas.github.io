---
// Modern CSS Particle Ring Background
// Based on Google Antigravity effect using CSS Houdini PaintWorklets
---

<div class="particle-ring-container" id="particle-ring">
  <div class="particle-ring-canvas"></div>
</div>

<style>
  .particle-ring-container {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .particle-ring-canvas {
    width: 100%;
    height: 100%;
    --ring-radius: 100;
    --ring-thickness: 600;
    --particle-count: 80;
    --particle-rows: 25;
    --particle-size: 2;
    --particle-color: hsl(0, 0%, 4%);
    --particle-min-alpha: 0.1;
    --particle-max-alpha: 0.8;
    --seed: 200;
    --ring-x: 50;
    --ring-y: 50;
    --ring-interactive: 0;
    --animation-tick: 0;
  }

  /* 暗色模式粒子颜色 */
  :global(.dark) .particle-ring-canvas {
    --particle-color: hsl(0 0% 98%);
    --particle-min-alpha: 0.05;
    --particle-max-alpha: 0.6;
  }

  /* Fallback gradient for browsers without Houdini support */
  @supports not (background: paint(something)) {
    .particle-ring-canvas {
      background: radial-gradient(
        circle at var(--ring-x, 50%) var(--ring-y, 50%),
        hsl(0 0% 9% / 0.12) 0%,
        hsl(0 0% 9% / 0.06) 30%,
        hsl(0 0% 9% / 0.02) 50%,
        transparent 70%
      );
    }

    /* 暗色模式降级渐变 */
    :global(.dark) .particle-ring-canvas {
      background: radial-gradient(
        circle at var(--ring-x, 50%) var(--ring-y, 50%),
        hsl(0 0% 98% / 0.08) 0%,
        hsl(0 0% 98% / 0.04) 30%,
        hsl(0 0% 98% / 0.015) 50%,
        transparent 70%
      );
    }
  }

  /* Houdini Paint Worklet support */
  @supports (background: paint(something)) {
    .particle-ring-canvas {
      background-image: paint(ring-particles);
    }
  }

  /* Animation properties */
  @property --animation-tick {
    syntax: '<number>';
    inherits: false;
    initial-value: 0;
  }

  @property --ring-radius {
    syntax: '<number>';
    inherits: false;
    initial-value: 100;
  }

  @property --ring-x {
    syntax: '<number>';
    inherits: false;
    initial-value: 50;
  }

  @property --ring-y {
    syntax: '<number>';
    inherits: false;
    initial-value: 50;
  }

  @property --ring-interactive {
    syntax: '<number>';
    inherits: false;
    initial-value: 0;
  }

  /* Animations */
  @keyframes ripple {
    0% { --animation-tick: 0; }
    100% { --animation-tick: 1; }
  }

  @keyframes ring {
    0% { --ring-radius: 150; }
    100% { --ring-radius: 250; }
  }

  .particle-ring-canvas {
    animation: 
      ripple 6s linear infinite,
      ring 6s ease-in-out infinite alternate;
  }
</style>

<script>
  // Register Houdini PaintWorklet if supported
  if ('paintWorklet' in CSS) {
    (CSS as any).paintWorklet.addModule('https://unpkg.com/css-houdini-ringparticles/dist/ringparticles.js').catch(() => {
      console.log('Houdini PaintWorklet not available, using fallback gradient');
    });
  }
</script>
