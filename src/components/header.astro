---
 import menus from "../collections/menu.json";
 import Logo from "../components/logo.astro";
 const { message = false } = Astro.props;
 
 // 获取当前路径用于菜单高亮
 const currentPath = Astro.url.pathname;
 
 // 判断菜单项是否激活
 function isActive(menuUrl: string) {
   // 首页精确匹配
   if (menuUrl === "/" && currentPath === "/") return true;
   
   // 其他页面匹配路径前缀
   if (menuUrl !== "/" && currentPath.startsWith(menuUrl.split("/")[1] ? `/${menuUrl.split("/")[1]}` : menuUrl)) {
     return true;
   }
   
   return false;
 }
 ---
 
 <!-- Spacer to prevent content from hiding under fixed header -->
 <div class="h-[100px]"></div>
 
 <!-- Mobile menu background overlay - 移到 header 外部 -->
 <div
   id="mobileMenuBackground"
   onclick="closeMobileMenu()"
   class="fixed inset-0 z-40 hidden w-screen h-screen duration-300 ease-out bg-white/90 dark:bg-neutral-950/90 backdrop-blur-sm"
 >
 </div>
 
 <header
   id="header"
   class="fixed top-5 left-0 right-0 z-50 px-4 transition-all duration-300"
   data-message={message.toString()}
 >
   <div
     class="flex items-center justify-between h-14 max-w-5xl mx-auto px-6 border border-neutral-300/50 bg-white/80 dark:border-neutral-600/40 dark:bg-neutral-900/60 backdrop-blur-2xl select-none rounded-full"
   >
     <Logo />
     <nav
       class="relative z-30 flex flex-row-reverse justify-start w-full text-sm sm:justify-end text-neutral-500 dark:text-neutral-400 sm:flex-row"
     >
       <div
         id="openMenu"
         class="flex flex-col items-end justify-center w-6 h-6 ml-4 cursor-pointer sm:hidden"
       >
         <svg
           class="w-8 h-8 dark:text-neutral-200"
           fill="none"
           stroke-linecap="round"
           stroke-linejoin="round"
           stroke-width="2"
           viewBox="0 0 24 24"
           stroke="currentColor"><path d="M4 8h16M4 16h16"></path></svg
         >
       </div>
       <div
         id="closeMenu"
         class="hidden flex-col items-end justify-center w-6 h-6 ml-4 -translate-x-1 cursor-pointer sm:hidden"
       >
         <svg
           class="w-6 h-6 text-neutral-600 dark:text-neutral-200"
           fill="none"
           stroke-linecap="round"
           stroke-linejoin="round"
           stroke-width="2"
           viewBox="0 0 24 24"
           stroke="currentColor"><path d="M6 18L18 6M6 6l12 12"></path></svg
         >
       </div>
       <div
         id="menu"
         class="fixed top-[80px] ease-out duration-300 sm:top-0 left-0 sm:py-0 pt-7 pb-4 z-50 flex-col items-end justify-start hidden w-full h-auto sm:h-auto sm:relative sm:flex-row sm:flex sm:text-sm sm:w-auto sm:pr-0 sm:pt-0"
       >
         <div
           class="absolute inset-0 top-0 right-0 block w-full h-full px-3 sm:hidden"
         >
           <div
             class="relative w-full h-full bg-white/95 border border-dashed border-neutral-300 dark:border-neutral-700 backdrop-blur-md rounded-3xl dark:bg-neutral-950/95"
           >
           </div>
         </div>
         {
           menus.map((menu) => {
             const active = isActive(menu.url);
             return (
               <a
                 href={menu.url}
                 class={`relative flex items-center justify-center w-full px-3 py-2 font-medium tracking-wide text-center duration-200 ease-out sm:py-0 sm:mb-0 md:w-auto hover:text-neutral-900 dark:hover:text-white ${active ? 'text-neutral-900 dark:text-white' : ''}`}
               >
                 {menu.name}
                 {active && (
                   <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-1 h-1 rounded-full bg-neutral-900 dark:bg-white sm:bottom-[-4px]"></span>
                 )}
               </a>
             );
           })
         }
       </div>
       <div
         id="darkToggle"
         class="relative flex items-center pl-6 ml-4 font-medium tracking-wide cursor-pointer text-neutral-800 group dark:text-white"
       >
         <div
           class="absolute left-0 flex items-center justify-center w-6 h-6 overflow-hidden border-b border-transparent horizon group-hover:border-neutral-600"
         >
           <svg
             class="absolute w-6 h-6 transition duration-700 transform ease"
             id="sun"
             fill="none"
             stroke-linecap="round"
             stroke-linejoin="round"
             stroke-width="2"
             viewBox="0 0 24 24"
             stroke="currentColor"
             ><path
               d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
             ></path></svg
           >
           <svg
             class="absolute hidden w-6 h-6 transition duration-700 transform ease"
             id="moon"
             fill="none"
             stroke-linecap="round"
             stroke-linejoin="round"
             stroke-width="2"
             viewBox="0 0 24 24"
             stroke="currentColor"
             ><path
               d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
             ></path></svg
           >
         </div>
         <span class="hidden sm:inline-block">
           <span id="dayText" class="ml-2">日间模式</span>
           <span id="nightText" class="hidden ml-2">夜间模式</span>
         </span>
       </div>
     </nav>
   </div>
 </header>