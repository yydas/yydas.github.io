---
import links from "../collections/content/link.json";
const { count } = Astro.props;
const linksLoop = links.slice(0, count);
---

<section class="max-w-4xl mx-auto px-7 lg:px-0">
  <div
    class="z-50 grid items-stretch w-full grid-cols-1 my-8 gap-7 sm:gap-5 sm:grid-cols-2 lg:grid-cols-3"
  >
    {
      linksLoop.map((link) => {
        return (
          <div class=" border hover:border-red-500 relative flex flex-col items-stretch duration-300 ease-out p-7 sm:p-3 group h-100 rounded-2xl border-6">
            <a class=" flex flex-row items-center" href={link.url} target="_blank">
              <img class=" h-10" src={link.image} alt="" />
              <div class="flex flex-col items-start gap-1 w-full px-1 mt-5 mb-1 sm:mt-3">
                <div class="mb-0 text-base font-semibold text-neutral-900 dark:text-neutral-100">{link.title}</div>
                <div class="text-sm text-neutral-600 dark:text-neutral-400 overflow-hidden line-clamp-2 line-clamp-ellipsis">{link.description}</div>
              </div>
              <div class="icon icon-arrow">
                <svg
                  class="group-hover:translate-x-0 group-hover:translate-y-0 -rotate-45 translate-y-1 -translate-x-1 w-2.5 h-2.5 stroke-current ml-1 transition-all ease-in-out duration-200 transform"
                  xmlns="http://www.w3.org/2000/svg"
                  width="14"
                  height="14"
                  viewBox="0 0 14 14"
                  fill="none"
                >
                  <path
                    d="M10.55 7.58332H1.16663V6.41665H10.55L7.75415 3.62082L8.5791 2.79587L12.1645 6.3813C12.5062 6.72299 12.5062 7.27701 12.1645 7.61873L8.5791 11.2042L7.75415 10.3792L10.55 7.58332Z"
                    fill="#B3B3C1"
                  />
                </svg>
              </div>
            </a>
          </div>
        );
      })
    }
  </div>
</section>
