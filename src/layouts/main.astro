---
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import SquareLines from "../components/square-lines.astro";
import DefaultDock from "../components/Dock.jsx";
import "../styles/globals.css";
import "katex/dist/katex.min.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- Used to add dark mode right away, adding here prevents any flicker -->
    <script is:inline>
      if (typeof Storage !== 'undefined') {
        if (
          localStorage.getItem('dark_mode') &&
          localStorage.getItem('dark_mode') == 'true'
        ) {
          document.documentElement.classList.add('dark')
        }
      }
    </script>

    <style>
      .prose img {
        border-radius: 20px;
      }
    </style>
    <link rel="icon" type="image/x-icon" href="../assets/images/favicon.png" />
    <script src="../assets/css/main.css"></script>
    <Fragment set:html={import.meta.env.HEADER_INJECT} />
  </head>
  <body class="antialiased bg-white dark:bg-neutral-950">
    <SquareLines />
    <Header />
    <slot />
    <DefaultDock client:load items={undefined} className="" />
    <Footer />
    
    <script src="../assets/js/main.js"></script>
    <script>
      // 确保抽屉切换函数在全局可用
      document.addEventListener('DOMContentLoaded', () => {
        // 为 DefaultDock 组件提供抽屉切换函数
        if (window.togglePostListDrawer) {
          // 如果抽屉函数已经存在，直接使用
          window.dockPostListToggle = window.togglePostListDrawer;
        } else {
          // 否则创建一个占位函数，等待抽屉初始化完成
          window.dockPostListToggle = () => {
            if (window.togglePostListDrawer) {
              window.togglePostListDrawer();
            }
          };
        }
      });
    </script>
    
    <!-- 初始化 Lenis 平滑滚动 -->
    <script>
      import { initSmoothScroll } from '../scripts/smooth-scroll'
      
      // 等待 DOM 完全加载
      document.addEventListener('DOMContentLoaded', () => {
        const lenis = initSmoothScroll()
        
        // 暴露到全局，方便其他脚本使用
        if (lenis) {
          window.lenis = lenis
        }
      })
    </script>
    
    <Fragment set:html={import.meta.env.FOOTER_INJECT} />
  </body>
</html>
