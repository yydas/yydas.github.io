---
import BentoGrid from "../components/portfolio/BentoGrid";
import Hero from "../components/portfolio/Hero.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Portfolio - Alex Carter">
  <section class="relative max-w-5xl mx-auto my-12 px-7 lg:px-6 z-10">
    <Hero />
    <BentoGrid client:load />
  </section>
</Layout>

<style is:global>
  /* Portfolio specific styles */
  .card-shadow {
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.04);
  }

  .dark .card-shadow {
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.4);
  }

  .glass-card {
    background: white;
    border: 1px solid rgb(229 231 235);
    border-radius: 1.5rem;
    transition: transform 0.3s cubic-bezier(0.2, 0, 0.2, 1), box-shadow 0.3s ease;
  }

  .dark .glass-card {
    background: rgb(23 23 23);
    border-color: rgb(38 38 38);
  }

  .glass-card:hover {
    transform: translateY(-4px);
  }

  /* Avatar specific glow for hover */
  .avatar-glow:hover {
    box-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.15), 0 0 0 4px rgba(255, 255, 255, 0.8);
  }
  
  .dark .avatar-glow:hover {
    box-shadow: 0 10px 40px -5px rgba(255, 255, 255, 0.1), 0 0 0 4px rgba(255, 255, 255, 0.2);
  }

  /* Map Grayscale effect */
  .map-filter { 
    filter: grayscale(1) contrast(1.1) brightness(1.1); 
    mix-blend-mode: multiply; 
  }
  
  .dark .map-filter { 
    filter: grayscale(1) invert(1) contrast(0.9) brightness(0.8); 
    mix-blend-mode: screen; 
  }
</style>
